{
  "name": "joomla-template-boilerplate",
  "version": "1.2.0",
  "description": "Joomla template boilerplate for rapid development",
  "author": "Rogachev Sergey <redknife183@gmail.com> (https://github.com/Redknife)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/Redknife/joomla-developer-template.git"
  },
  "engines": {
    "node": ">= 5.0.0"
  },
  "scripts": {
    "build": "NODE_ENV=production gulp build",
    "build:dev": "NODE_ENV=dev gulp build",
    "build:all": "NODE_ENV=dev gulp build && NODE_ENV=production gulp build",
    "start": "NODE_ENV=dev NODE_WATCH=true gulp",
    "start:prod": "NODE_ENV=production NODE_WATCH=true gulp",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src/js/ || true",
    "lint:css": "stylelint ./src/scss/**/*.scss || true",
    "favicons": "gulp favicons",
    "clean": "gulp clean",
    "help": "node ./tools/help.js"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "jquery": true
    },
    "rules": {
      "max-len": 0,
      "no-underscore-dangle": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": true,
          "peerDependencies": true
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.18.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-lodash": "^3.2.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "chalk": "^1.1.3",
    "css-mqpacker": "^5.0.1",
    "del": "^2.2.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-changed": "^1.3.0",
    "gulp-csso": "^2.0.0",
    "gulp-hub": "github:frankwallis/gulp-hub#4.0",
    "gulp-iconfont": "^8.0.1",
    "gulp-iconfont-css": "^2.1.0",
    "gulp-imagemin": "^3.0.3",
    "gulp-livereload": "^3.8.1",
    "gulp-postcss": "^6.1.0",
    "gulp-real-favicon": "0.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.3.1",
    "gulp-size": "^2.0.0",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-util": "^3.0.7",
    "lodash-webpack-plugin": "0.10.2",
    "modernizr-loader": "0.0.5",
    "postcss-assets": "^4.1.0",
    "postcss-easings": "0.3.0",
    "postcss-fixes": "^1.2.2",
    "postcss-initial": "^1.5.1",
    "postcss-will-change": "1.1.0",
    "stylelint": "^7.5.0",
    "stylelint-config-standard": "^14.0.0",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bootstrap-sass": "^3.3.7",
    "jquery": "^3.1.1",
    "jquery.maskedinput": "^1.4.1",
    "lodash": "^4.16.4",
    "magnific-popup": "^1.1.0",
    "modernizr": "^3.3.1",
    "parsleyjs": "^2.3.11",
    "redux": "^3.5.2",
    "selectize": "^0.12.1",
    "slick-carousel": "^1.6.0",
    "ua-parser-js": "^0.7.10",
    "velocity-animate": "1.3.1",
    "whatwg-fetch": "^1.0.0"
  }
}
