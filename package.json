{
  "name": "joomla-template-boilerplate",
  "version": "1.2.0",
  "description": "Joomla template boilerplate for rapid development",
  "author": "Rogachev Sergey <redknife183@gmail.com> (https://github.com/Redknife)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/Redknife/joomla-developer-template.git"
  },
  "scripts": {
    "postinstall": "echo 'npm start - run in dev mode (watching, sourcemaps, etc)'",
    "build": "npm run build:prod",
    "build:dev": "NODE_ENV=dev gulp build",
    "build:prod": "NODE_ENV=production gulp build",
    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=dev NODE_WATCH=true gulp",
    "start:prod": "NODE_ENV=production NODE_WATCH=true gulp",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src/js/ || true",
    "lint:css": "stylelint ./src/scss/**/*.scss || true",
    "favicons": "gulp favicons",
    "clean": "gulp clean",
    "help": "node ./tools/help.js"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "jquery": true
    },
    "rules": {
      "max-len": 0,
      "no-underscore-dangle": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": true,
          "peerDependencies": true
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-lodash": "3.2.8",
    "babel-preset-es2015": "6.14.0",
    "babel-register": "6.16.3",
    "chalk": "1.1.3",
    "css-mqpacker": "^4.0.1",
    "del": "^2.2.0",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.0.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-changed": "^1.3.0",
    "gulp-csso": "^1.0.1",
    "gulp-hub": "github:frankwallis/gulp-hub#4.0",
    "gulp-iconfont": "^6.0.0",
    "gulp-iconfont-css": "^2.1.0",
    "gulp-imagemin": "^2.4.0",
    "gulp-livereload": "^3.8.1",
    "gulp-postcss": "^6.1.0",
    "gulp-real-favicon": "0.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.3.1",
    "gulp-size": "^2.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-util": "^3.0.7",
    "lodash-webpack-plugin": "0.10.0",
    "modernizr-loader": "0.0.5",
    "postcss-assets": "^4.1.0",
    "postcss-fixes": "^1.2.2",
    "postcss-initial": "^1.5.1",
    "stylelint": "^6.5.1",
    "stylelint-config-standard": "^8.0.0",
    "webpack": "1.13.2",
    "webpack-stream": "3.2.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bootstrap-sass": "3.3.7",
    "jquery": "^2.2.4",
    "jquery.maskedinput": "^1.4.1",
    "jquery.scrollto": "^2.1.2",
    "jquery.transit": "^0.9.12",
    "lodash": "4.15.0",
    "magnific-popup": "^1.1.0",
    "matchmedia-polyfill": "^0.3.0",
    "modernizr": "3.3.1",
    "parsleyjs": "^2.3.11",
    "redux": "^3.5.2",
    "sanitize.css": "3.3.0",
    "selectize": "^0.12.1",
    "slick-carousel": "^1.6.0",
    "stampit": "^2.1.1",
    "ua-parser-js": "^0.7.10",
    "whatwg-fetch": "^1.0.0"
  }
}
