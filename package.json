{
  "name": "joomla-template-boilerplate",
  "version": "1.2.0",
  "description": "Joomla template boilerplate for rapid development",
  "author": "Rogachev Sergey <redknife183@gmail.com> (https://github.com/Redknife)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git://github.com/Redknife/joomla-developer-template.git"
  },
  "scripts": {
    "postinstall": "echo 'npm start - runs the app in dev mode (watching, sourcemaps, etc)'",
    "build": "NODE_ENV=production gulp default",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint ./src/js/ || true",
    "lint:css": "stylelint ./src/scss/**/*.scss || true",
    "favicon": "gulp favicon",
    "start": "NODE_ENV=dev gulp default watch",
    "test": "NODE_ENV=test karma start tools/testing/karma.conf.js --single-run || true",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "test:firefox": "npm run test -- --browsers Firefox",
    "test:safari": "npm run test -- --browsers Safari"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "jquery": true
    },
    "rules": {
      "max-len": 0,
      "no-underscore-dangle": 0
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-lodash": "3.2.8",
    "babel-preset-es2015": "6.14.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "css-mqpacker": "^4.0.1",
    "del": "^2.2.0",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.0.1",
    "expose-loader": "^0.7.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-changed": "^1.3.0",
    "gulp-csso": "^1.0.1",
    "gulp-iconfont": "^6.0.0",
    "gulp-iconfont-css": "^2.1.0",
    "gulp-if": "^2.0.1",
    "gulp-imagemin": "^2.4.0",
    "gulp-livereload": "^3.8.1",
    "gulp-notify": "^2.2.0",
    "gulp-postcss": "^6.1.0",
    "gulp-real-favicon": "0.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.3.1",
    "gulp-size": "^2.0.0",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-util": "^3.0.7",
    "gulp.spritesmith": "^6.2.0",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.22",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lodash-webpack-plugin": "0.10.0",
    "minimist": "^1.2.0",
    "mocha": "^2.5.3",
    "modernizr-loader": "0.0.5",
    "postcss-assets": "^4.1.0",
    "postcss-fixes": "^1.2.2",
    "postcss-initial": "^1.5.1",
    "postcss-loader": "^0.9.1",
    "require-dir": "^0.3.0",
    "run-sequence": "^1.1.5",
    "sass-loader": "^4.0.0",
    "stylelint": "^6.5.1",
    "stylelint-config-standard": "^8.0.0",
    "vinyl-paths": "^2.1.0",
    "webpack": "1.13.2"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bootstrap-sass": "3.3.7",
    "bowser": "1.4.5",
    "jquery": "^2.2.4",
    "jquery.maskedinput": "^1.4.1",
    "jquery.scrollto": "^2.1.2",
    "jquery.transit": "^0.9.12",
    "lodash": "4.15.0",
    "magnific-popup": "^1.1.0",
    "matchmedia-polyfill": "^0.3.0",
    "modernizr": "3.3.1",
    "parsleyjs": "^2.3.11",
    "redux": "^3.5.2",
    "sanitize.css": "3.3.0",
    "selectize": "^0.12.1",
    "slick-carousel": "^1.6.0",
    "stampit": "^2.1.1",
    "ua-parser-js": "^0.7.10",
    "whatwg-fetch": "^1.0.0"
  }
}
